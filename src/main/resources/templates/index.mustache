{{>layout/header}}

    <h1>스프링 부트로 만든 게시판</h1>

    <div class="row m-3">
        {{#userName}}
            <div class="w-100">
                <span>Logged in as:</span>
                <span class="m-1" id="user">{{userName}}</span>
                <a href="/logout" class="btn btn-info active" role="button">Logout</a>
            </div>
        {{/userName}}
        {{^userName}}
            <a href="/oauth2/authorization/google" class="btn btn-success active" role="button">Google Login</a>
            <a href="/oauth2/authorization/naver" class="btn btn-success active" role="button">Naver Login</a>
        {{/userName}}
    </div>

    <div class="row m-3">
        <button class="btn btn-primary float-right" type="button" id="btn-write">작성</button>
    </div>

    <div>
        <table class="table table-horizontal table-bordered">
            <thead class="thead-strong">
                <tr>
                    <th>게시글 번호</th>
                    <th>제목</th>
                    <th>작성자</th>
                    <th>최종수정일</th>
                </tr>
            </thead>
            <tbody id="tbody">
            {{#posts}}
                <tr>
                    <td>{{id}}</td>
                    <td><a href="/posts/{{id}}">{{title}}</a></td>
                    <td>{{author}}</td>
                    <td>{{modifiedDate}}</td>
                </tr>
            {{/posts}}
            </tbody>
        </table>
    </div>

{{>layout/footer}}
